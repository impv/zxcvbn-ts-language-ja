{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "moduleResolution": "Node",
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": true,
    "outDir": "esm"
  },
  "include": ["./src/**/*.ts"]
}
